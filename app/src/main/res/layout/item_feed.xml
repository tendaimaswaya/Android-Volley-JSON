<?xml version="1.0" encoding="utf-8"?>
        <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android" style="@style/HNews.Card"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp">


            <LinearLayout
                    android:id="@+id/article_card_root"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/thumbnail"
                        android:layout_width="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_height="190dp"
                        android:contentDescription="feedImage"/>



                    <TextView
                            android:id="@+id/feed_title"
                            android:textColor="@color/dark_grey"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            tools:text="This is the article title" />

                <TextView
                        android:id="@+id/feed_date"
                        android:textColor="@color/dark_grey"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        tools:text="This is the date" />

                <include
                        android:id="@+id/decor_content_parent"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        layout="@layout/item_feed_footer" />

            </LinearLayout>



    </RelativeLayout>

